                                        </span>
                                    </div>


                                </div>
                            </div>
                        }
                    </aside>
                </div>
            </div>
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h1 class="panel-title">@MvcHtmlString.Create("Danh sách phiếu nhập kho thành phẩm")</h1>
                </div>
                <div class="panel-body" id="panel-body" style="padding-left: 0px; padding-right: 0px;">
                    @Html.AntiForgeryToken()
                    <aside class="col-xs-12">
                        @Html.Partial("_SearchTable", null, new ViewDataDictionary() { { "TotalRow", totalRow.ToString() } })
                        <div class="scrollable-horizontal scrollable-horizontal-height div-scrollable" data-size="1360" style="padding-top: 0!important;">
                            <div style="width: 100%; float: left;">
                                <table id="dynamic-table-thead" class="table table-bordered table-thead table-cus table-bottom-0">
                                    <thead>
                                        <tr>
                                            <th class="text-center cell-50">STT</th>
                                            <th class="text-center cell-80">&nbsp;</th>
                                            <th class="text-center cell-150">
                                                Mã người dùng
                                            </th>
                                            <th class="text-center cell-200">
                                                Họ tên
                                            </th>
                                            <th class="text-center cell-100">
                                                Ảnh đại diện
                                            </th>
                                            <th class="text-center cell-80">
                                                Giới tính
                                            </th>
                                            <th class="text-center cell-100">
                                                Ngày tạo
                                            </th>
                                            <th class="text-center cell-100">
                                                Ngày sinh
                                            </th>
                                            <th class="text-center cell-100">
                                                Điện thoại
                                            </th>
                                            <th class="text-center cell-200">
                                                Email
                                            </th>
                                            <th class="text-center cell-100">
                                                Quản trị hệ thống
                                            </th>
                                            <th class="text-center cell-100">
                                                Trạng thái
                                            </th>

                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="scrollable" data-size="500" style="width: 100%; float: left;">
                                <table id="dynamic-table-tbody" class="table table-striped table-bordered table-hover table-tbody">
                                    <tbody id="table-tbodyID">
                                        @if (Model != null && Model.DataList != null && Model.DataList.Count > 0)
                                        {
                                            var idx = 0;
                                            foreach (var item in Model.DataList)
                                            {
                                                var userCode = "";
                                                var fullName = "";
                                                var avatar = Url.Content("~/Areas/Auth/Content/assets/images/avatars/profile-pic.jpg");
                                                var sex = "";
                                                var createDTime = "";
                                                var birthDay = "";
                                                var phoneNo = "";
                                                var email = "";
                                                var flagActive = false;
                                                var isSysAdmin = false;
                                                var iindex = startCount + (idx + 1);
                                                if (!CUtils.IsNullOrEmpty(item.UserCode))
                                                {
                                                    userCode = CUtils.StrValue(item.UserCode);
                                                }
                                                if (!CUtils.IsNullOrEmpty(item.FullName))
                                                {
                                                    fullName = CUtils.StrValue(item.FullName);
                                                }
                                                if (!CUtils.IsNullOrEmpty(item.Avatar))
                                                {
                                                    avatar = CUtils.StrValue(item.Avatar);
                                                }
                                                if (!CUtils.IsNullOrEmpty(item.Sex))
                                                {
                                                    sex = BaseController.GetGenderName(CUtils.StrValue(item.Sex));
                                                }
                                                if (!CUtils.IsNullOrEmpty(item.CreateDTime) && CUtils.IsDateTime(item.CreateDTime))
                                                {
                                                    createDTime = CUtils.FormatDateTime(CUtils.StrValue(item.CreateDTime), Nonsense.DATE_TIME_FORMAT);
                                                }
                                                if (!CUtils.IsNullOrEmpty(item.BirthDay) && CUtils.IsDateTime(item.BirthDay))
                                                {
                                                    birthDay = CUtils.FormatDateTime(CUtils.StrValue(item.BirthDay), Nonsense.DATE_TIME_FORMAT);
                                                }
                                                if (!CUtils.IsNullOrEmpty(item.PhoneNo))
                                                {
                                                    phoneNo = CUtils.StrValue(item.PhoneNo);
                                                }
                                                if (!CUtils.IsNullOrEmpty(item.Email))
                                                {
                                                    email = CUtils.StrValue(item.Email);
                                                }
                                                if (!CUtils.IsNullOrEmpty(item.FlagActive))
                                                {
                                                    flagActive = item.FlagActive;
                                                }
                                                if (!CUtils.IsNullOrEmpty(item.IsSysAdmin))
                                                {
                                                    isSysAdmin = item.IsSysAdmin;
                                                }
                                                <tr>
                                                    <td class="text-left cell-50">@MvcHtmlString.Create(iindex.ToString().Trim())</td>
                                                    <td class="text-center cell-80">
                                                        <div class="hidden-sm hidden-xs action-buttons padding-top-2">
                                                            @{
                                                                var urlDetail = Url.Action("Detail", "Sys_User", new { usercode = item.UserCode });
                                                                var urlUpdate = Url.Action("Update", "Sys_User", new { usercode = item.UserCode });
                                                            }

                                                            @RenderItemFormat("BTN_QL_NGUOI_DUNG_TDMK", "<a href=\"javascript:;\" class=\"icon-detail\" title=\"Thay đổi mật khẩu\" onclick=\"ShowPopupChangePassword('" + item.UserCode + "')\"><img class=\"img-icon\" src='" + Url.Content("~/Areas/Auth/Content/images/lock.svg") + "'></a>", "", "")
                                                            @RenderItemFormat("BTN_QL_NGUOI_DUNG_CHI_TIET", "<a class=\"icon-detail tooltip-detail\" href=\'" + urlDetail + "\' title=\"Chi tiết\"><img class=\"img-icon\" src='" + Url.Content("~/Areas/Auth/Content/images/View.svg") + "'></a>", "", "")
                                                            @RenderItemFormat("BTN_QL_NGUOI_DUNG_SUA", "<a class=\"icon-edit tooltip-edit\" href=\'" + urlUpdate + "\' title=\"Sửa\"><img class=\"img-icon\" src='" + Url.Content("~/Areas/Auth/Content/images/Edit.svg") + "'></a>", "", "")
                                                            @RenderItemFormat("BTN_QL_NGUOI_DUNG_XOA", "<a href=\"javascript:;\" class=\"icon-delete tooltip-delete\" title=\"Xóa\" onclick=\"Delete('" + item.UserCode + "','" + item.FullName + "')\"><img class=\"img-icon\" src='" + Url.Content("~/Areas/Auth/Content/images/delete.svg") + "'></a>", "", "")
                                                        </div>
                                                    </td>
                                                    <td class="text-left cell-150">
                                                        @MvcHtmlString.Create(userCode)
                                                    </td>
                                                    <td class="text-left cell-200">
                                                        @MvcHtmlString.Create(fullName)
                                                    </td>
                                                    <td class="text-center cell-100">
                                                        <img class="responsive-img" src="@MvcHtmlString.Create(avatar)" />
                                                    </td>
                                                    <td class="text-center cell-80">
                                                        @MvcHtmlString.Create(sex)
                                                    </td>
                                                    <td class="text-center cell-100">
                                                        @MvcHtmlString.Create(createDTime)
                                                    </td>
                                                    <td class="text-center cell-100">
                                                        @MvcHtmlString.Create(birthDay)
                                                    </td>
                                                    <td class="text-left cell-100">
                                                        @MvcHtmlString.Create(phoneNo)
                                                    </td>
                                                    <td class="text-left cell-200">
                                                        @MvcHtmlString.Create(email)
                                                    </td>
                                                    <td class="center cell-100">
                                                        <label class="block disabled-checkbox-fix">
                                                            <input name="form-field-checkbox" type="checkbox" class="ace input-lg" @(isSysAdmin ? "checked=checked" : "") />
                                                            <span class="lbl bigger-120">&nbsp;</span>
                                                        </label>
                                                    </td>
                                                    <td class="text-center cell-100">
                                                        @if (flagActive)
                                                        {
                                                            <span class="label label-sm label-success">Active</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="label label-sm label-danger">Inactive</span>
                                                        }
                                                    </td>
                                                </tr>
                                                idx++;
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="12">
                                                    <p>Lưới danh sách dữ liệu trống</p>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @if (Model != null)
                        {
                            <div id="dynamic-table_paginate" class="dataTables_paginate paging_simple_numbers" style="padding-top: 15px;">
                                @Html.PagerBootstrap((int)Model.PageSize, -1 + (int)Model.PageIndex, (int)Model.ItemCount, new { userCode = Request["userCode"], fullName = Request["fullName"], birthdayfrom = Request["birthdayfrom"], birthdayto = Request["birthdayto"], createdtimefrom = Request["createdtimefrom"], createdtimeto = Request["createdtimeto"], phoneno = Request["phoneno"], email = Request["email"], sex = Request["sex"], flagactive = Request["flagactive"], issysadmin = Request["issysadmin"], init = Request["init"] }, "Trang trước", "Trang sau", "Trang đầu", "Trang cuối")
                            </div>
                        }
                    </aside>
                    <div class="hr hr-18 hr-double dotted">
                    </div>

                    <div class="row list-row">
                        <div class="col-xs-12" style="padding-top: 15px">

                            @RenderItemFormat("BTN_QL_KHO_TT_XACTHUC_XUAT_EXCEL", "<a class=\"btn mybtn-Button\" onclick=\"Export()\" href=\"javascript:void(0);\" style=\"margin-left: 10px; \"><i class=\"ace-icon fa fa-download bigger-120\"></i>Xuất Excel</a>", "", "")
                            <a href="@Url.ActionLocalized("Create", "Sys_User", new { })">
                                ActionLocalized
                            </a>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div>
            </div>
        </div>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
@*Change password*@
<div class="modal fade" id="ShowPopupChangePassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"></div>


@section Scripts{
    <script type="text/javascript">
        var parents = new Array();
        parents.push("@Url.ActionLocalized("Index", "Sys_User", new {area = "Auth"})");
        var parentsText = new Array();
        parentsText.push("@MvcHtmlString.Create("Quản lý thành viên")");
        setAdminCurrentTag(parents, parentsText);
    </script>

    @*Active Menu*@
    <script type="text/javascript">
        setAdminCurrentUrl('@Url.ActionLocalized("Index", "Sys_User", new {area = "Auth"})');
    </script>

    <script type="text/javascript">
        function ShowPopupChangePassword(usercode) {
            if (!IsNullOrEmpty(usercode)) {
                var url = '@Url.ActionLocalized("ShowPopupChangePassword", "Sys_User", new { area = "Auth" })';
                $.ajax({
                    url: url,
                    data: { usercode: usercode},
                    type: 'post',
                    dataType: 'json',
                    traditional: true,
                    success: function (data) {
                        if (data.Success) {
                            $('#ShowPopupChangePassword').modal({
                                backdrop: false,
                                keyboard: true
                            });
                            $("#ShowPopupChangePassword").html(data.Html); // truyen html vao #form
                        } else {
                            _showErrorMsg123('@MvcHtmlString.Create("Lỗi")', data.Detail);
                        }

                    }
                });
            }
            else {
                alert('Mã người dùng trống!');
                return;
            }
        }
    </script>

    @*scroll*@
    <script type="text/javascript">
        jQuery(function ($) {
            $('#birthdayfrom, #birthdayto, #createdtimefrom, #createdtimeto').datepicker({
                autoclose: true,
                todayHighlight: true,
                format: 'yyyy-mm-dd'
            })//show datepicker when clicking on the icon
            .next().on(ace.click_event, function () {
                $(this).prev().focus();
            });
        });

        $(document).ready(function () {
            $(".tooltip-detail, .tooltip-edit, .tooltip-delete").tooltip({
                show: {
                    effect: "slideDown",
                    delay: 250
                }
            });

            $('.scrollable-horizontal').each(function () {
                var $this = $(this);
                $(this).ace_scroll(
                    {
                        horizontal: true,
                        //styleClass: 'scroll-top',//show the scrollbars on top(default is bottom)
                        size: $this.attr('data-size') || 6500,
                        mouseWheelLock: true
                    }
                ).css({ 'padding-top': 0 });
            });
        });
        $('.scrollable').each(function () {
            var $this = $(this);
            $(this).ace_scroll({
                //size: 500,
                size: $this.attr('data-size') || 1000,
                mouseWheelLock: true,
                //styleClass: 'scroll-left scroll-margin scroll-thin scroll-dark scroll-light no-track scroll-visible'
            });
        });
    </script>
}

