@model PageInfo<Sys_User>
@{
    const string title = "Quản lý thông tin thành viên";
    ViewBag.Title = title;
    var totalRow = 0;
    var totalRowActive = 0;
    var totalRowInactive = 0;
    var startCount = 0;
    var strStartCount = ViewBag.StartCount as string;
    if (!CUtils.IsNullOrEmpty(strStartCount))
    {
        startCount = Convert.ToInt32(strStartCount);
    }
    if (Model != null && !CUtils.IsNullOrEmpty(Model.ItemCount))
    {
        totalRow = CUtils.ConvertToInt32(Model.ItemCount);
    }
}

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <div class="panel-group" id="steps">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="fa fa-search" aria-hidden="true" style="margin-right: 7px;"></i>
                        @S("Search")
                    </h3>
                </div>
                <div class="panel-body" id="panel-body" style="padding-left: 0px; padding-right: 0px;">
                    <aside class="col-xs-12">
                        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "manageForm", @class = "form-horizontal" }))
                        {

                            <input type="hidden" value="search" name="init" id="init" />
                            <div class="col-xs-12">

                                
                                <div class="row">
                                    <div class="col-sm-11 row" style="margin:0px !important;padding:0px !important">
                                        <div class="col-md-4 col-lg-4 col-xs-12" style="padding:0">
                                            <div class="form-group">
                                                <label class="col-sm-4 control-label no-padding-right  font-weight-500">Mã người dùng</label>
                                                <div class="col-sm-8 ">
                                                    <input type="text" id="usercode" name="usercode" class="col-xs-12" value="@MvcHtmlString.Create(CUtils.StrValue(ViewBag.UserCode))" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="serialno" class="col-xs-12 col-sm-4 control-label  font-weight-500">Ngày tạo</label>
                                                <div class="col-xs-12 col-sm-8">
                                                    <div class="row">
                                                        <div class="col-sm-5" style="padding:0">
                                                            <div class="input-daterange input-group" style="border-right: 1px solid #ccc;">
                                                                <input type="text" id="createdtimefrom" name="createdtimefrom" class="col-xs-12" data-date-format="yyyy-mm-dd" value="@MvcHtmlString.Create(CUtils.StrValue(ViewBag.CreateDTimeFrom))" />
